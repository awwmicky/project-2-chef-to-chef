                            <option value="chinese">Chinese</option>
                            <option value="american">American</option>
                        </select>
                        <br>
                        {{!-- <label for="price">Choose a price range</label> --}}
                        <select name="price" class="price-input">
                            <option value="x" selected disabled>Select A Price Range</option>
                            <option value="1">$</option>
                            <option value="2">$$</option>
                            <option value="3">$$$</option>
                        </select>
                    </form>
                </div>
            </div>
            <div class="row">
                <div class="btn-column">
                    <div class="btn">
                        {{!-- <label for="submit">Find that chef</label> --}}
                        <input name="submit" id="submitBtn" type="submit" value="Find my chef!">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <section class="results"></section>


</main>
