<main>
    <div class="container">
        <div class="form-container">
            <div class="row">
                <div class="form-column">
                    <form class="chef-data-form">
                        <select name="location" class="location-input">
                            <option value="location" selected disabled>Location</option>
                            <option value="x">Bay Area</option>
                        </select>
                        <br>
                        <select name="cuisine" class="cuisine-input">
                            <option value="cuisine" selected disabled>Choose A Cuisine</option>
